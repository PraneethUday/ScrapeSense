{
  "manifest_version": 3,
  "name": "ScrapeSense",
  "version": "1.0.0",
  "description": "AI-powered web scraping chatbot assistant accessible from the extension popup",
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "ScrapeSense - AI Web Assistant"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon-16.svg",
    "48": "icons/icon-48.svg",
    "128": "icons/icon-128.svg"
  }
}
